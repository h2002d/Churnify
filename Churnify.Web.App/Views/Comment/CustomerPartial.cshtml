@model Churnify.Web.App.ViewModels.Comments.CustomerCommentViewModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Comments</h5>
            </div>
            <table id="comments_table" class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User</th>
                        <th scope="col">Comment</th>
                        <th scope="col">DateTime</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Comments.Count > 0)
                    {
                        foreach (var item in Model.Comments)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.UserId</td>
                                <td>@item.Content</td>
                                <td>Today</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="border-top">
                <div class="card-body">
                    <form method="post" action="/Comment/create">
                        <input type="hidden" value="dave.dave" id="UserId" name="userId" />
                        <input type="hidden" value="@Model.Customer.Id" id="CustomerId" name="CustomerId" />
                        <div id="Content" name="Content" style="height: 300px;">
                            <p>Type your comment...</p>
                        </div>

                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var quill = new Quill('#Content', {
        theme: 'snow'
    });
</script>